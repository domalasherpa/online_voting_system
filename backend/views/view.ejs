<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MongoDB Data</title>
  </head>
  <body>
    <h1>Items in MongoDB:</h1>
    <ul>
      <% items.forEach(function(item) { %>
      <li><%= item.name %></li>
      <li><%= item.age %></li>
      <li><%= item.email %></li>
      <br />
      <% }); %>
    </ul>
  </body>
</html>
