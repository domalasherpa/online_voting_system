<header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Elections</h1>
    </div>
</header>

<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% elections.map(election=>{ %>

        <form action="/api/v1/elections/<%= election._id %>">
            <div class="block rounded-lg  border-2 border-gray-600 shadow-secondary-1 text-surface">
                <h5 class="border-b-2 border-neutral-100 px-6 py-3 text-xl font-medium leading-tight dark:border-white/10">
                    <%= election.name %>
                </h5>
                <div class="p-6">
                    <ol class="relative border-s border-gray-200 dark:border-gray-700 mb-3">
                        <li class="mb-10 ms-4">
                            <div
                                class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
                            </div>
                            <p class="text-gray-600">Start Date</p>
                            <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
                                <%= election.startDate %>
                            </time>
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </li>
                        <li class="ms-4">
                            <div
                                class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
                            </div>
                            <p class="text-gray-600">End Date</p>
                            <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
                                <%= election.endDate %>
                            </time>
                        </li>
                    </ol>
                    <button class="px-5 py-2 rounded-md text-white bg-blue-900 hover:bg-blue-600 active:bg-blue-900">View
                        more</button>
                </div>
            </div>    
        </form>
        <% }); %>
</div>
