<div class="bg-gray-900 text-white flex justify-center items-center h-screen">
	<div class="max-w-3xl w-full p-6">
		<div>
			<h3 class="text-lg font-semibold leading-7">Election Information</h3>
		</div>
		<div class="mt-6 border-t border-gray-100">
			<dl class="divide-y divide-gray-100">
				<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
					<dt class="text-sm font-medium leading-6">Election Name</dt>
					<dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
						<%=election.name%>
					</dd>
				</div>
				<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
					<dt class="text-sm font-medium leading-6">Start Date</dt>
					<dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
						<%=election.startDate%>
					</dd>
				</div>
				<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
					<dt class="text-sm font-medium leading-6">End Date</dt>
					<dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
						<%=election.endDate%>
					</dd>
				</div>
				<br>
				<h2 class="text-lg font-medium leading-6">Candidates</h2>
				<% // Define the election object with candidates and their votes 
					const ele={ candidates: [ {name: 'Candidate 1' , votes: 50 },
					 { name: 'Candidate 2' , votes: 30 }, 
					 { name: 'Candidate 3' , votes: 20 } ] }; // Calculate the total votes 
					 const totalVotes=ele.candidates.reduce((total, candidate)=> total + candidate.votes, 0);
					%>

					<div class="flex flex-col gap-4">
						<% ele.candidates.forEach((candidate, index)=> { %>

							<div class="flex items-center gap-4">
								<img class="w-10 h-10 rounded-full"
									src="/uploads/<%= candidate.imageUrl ? candidate.imageUrl : 'blankUser.png' %>"
									alt="Profile image">
								<div class="text-sm font-medium text-gray-700">
									<%= candidate.name %>:
								</div>
								<div class="w-full bg-gray-200 rounded-full dark:bg-gray-700" style="height: 8px;">
									<div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full"
										style="height: 8px; width: <%= candidate.votes !== 0 ? ((candidate.votes / totalVotes) * 100) + '%' : '0%' %>;">
										<%= candidate.votes %>
									</div>
								</div>
							</div>
							<% }) %>
					</div>

			</dl>
		</div>
	</div>
</div>



</div>